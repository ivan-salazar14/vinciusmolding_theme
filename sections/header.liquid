<!-- header-area start -->
<section class="header-kaj">
    <div class="header-area">
        <div class="header-top">
            <div class="container-fluid">
                <div class="header-top-bar">
                    <div class="header-top-wrap search-map">
                        <div class="search-wrap">
                            {%- render 'search-bar' -%}
                        </div>
                        <div class="custom-text">
                            <a href="javascript:void(0)" class="custom-url">
                                {% if section.settings.custom_icon != '' %}
                                <span class="icon"><i class="{{ section.settings.custom_icon }}"></i></span>
                                {% endif %}
                                {% if section.settings.custom_text != '' %}
                                <span class="text">{{ section.settings.custom_text }}</span>
                                {% endif %}
                            </a>
                        </div>
                    </div>
                    {% if section.settings.offer_text != '' %}
                    <div class="header-top-wrap offer-text">
                        {{ section.settings.offer_text }}
                    </div>
                    {% endif %}
                    <div class="header-top-wrap right-block">
                        {%- render 'header-icon', section: section -%}
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="header-main-area">
                <div class="header-main">
                    <div class="header-element logo-wrap">
                        {%- render 'company-logo' -%}
                    </div>
                    <div class="header-element main-menu-area">
                        <nav class="main-navigation">
                            <div class="megamenu-content">
                                <ul class="main-menu">
                                    {% assign header_main_menu = section.settings.header_main_menu %}
                                    {% for link in linklists[header_main_menu].links %}
                                    {% if linklists[header_main_menu].links != '' %}
                                    {% render 'main-menu', link: link %}
                                    {% endif %}
                                    {% endfor %}
                                </ul>
                            </div>
                        </nav>
                    </div>
                    <div class="header-element info-wrap-block">
                        <div class="mobile-right-block right-block">
                            {%- render 'header-icon', section: section -%}
                        </div>
                        <ul class="info-wrap-ul info-lg">
                            <li class="info-wrap-li">
                                <a href="{{ section.settings.info_url_1 }}" class="info-wrap">
                                    {% if section.settings.info_icon_1 != '' %}
                                    <div class="info-icon">
                                        <span class="icon"><i class="{{ section.settings.info_icon_1 }}"></i></span>
                                    </div>
                                    {% endif %}
                                    <div class="info-text">
                                        {% if section.settings.info_label_1 != '' %}
                                        <span class="label">{{ section.settings.info_label_1 }}</span>
                                        {% endif %}
                                        {% if section.settings.info_text_1 != '' %}
                                        <span class="text">{{ section.settings.info_text_1 }}</span>
                                        {% endif %}
                                    </div>
                                </a>
                            </li>
                            <li class="info-wrap-li">
                                <a href="{{ section.settings.info_url_2 }}" class="info-wrap">
                                    {% if section.settings.info_icon_2 != '' %}
                                    <div class="info-icon">
                                        <span class="icon"><i class="{{ section.settings.info_icon_2 }}"></i></span>
                                    </div>
                                    {% endif %}
                                    <div class="info-text">
                                        {% if section.settings.info_label_2 != '' %}
                                        <span class="label">{{ section.settings.info_label_2 }}</span>
                                        {% endif %}
                                        {% if section.settings.info_text_2 != '' %}
                                        <span class="text">{{ section.settings.info_text_2 }}</span>
                                        {% endif %}
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mobile-menu">
        <div class="main-menu-area">
            <nav class="main-navigation">
                <div class="box-header">
                    <button class="close-box" type="button"><i class="ri-close-line"></i></button>
                </div>
                <div class="megamenu-content">
                    <ul class="main-menu">
                        {%- liquid
                        assign header_main_menu = section.settings.header_main_menu
                        for link in linklists[header_main_menu].links
                        if linklists[header_main_menu].links != ''
                        render 'main-menu', link: link
                        endif
                        endfor
                        -%}
                    </ul>
                </div>
            </nav>
            <div class="info-xs info-wrap-block">
                <ul class="info-wrap-ul">
                    <li class="info-wrap-li">
                        <a href="{{ section.settings.info_url_1 }}" class="info-wrap">
                            {% if section.settings.info_icon_1 != '' %}
                            <div class="info-icon">
                                <span class="icon"><i class="{{ section.settings.info_icon_1 }}"></i></span>
                            </div>
                            {% endif %}
                            <div class="info-text">
                                {% if section.settings.info_label_1 != '' %}
                                <span class="label">{{ section.settings.info_label_1 }}</span>
                                {% endif %}
                                {% if section.settings.info_text_1 != '' %}
                                <span class="text">{{ section.settings.info_text_1 }}</span>
                                {% endif %}
                            </div>
                        </a>
                    </li>
                    <li class="info-wrap-li">
                        <a href="{{ section.settings.info_url_2 }}" class="info-wrap">
                            {% if section.settings.info_icon_2 != '' %}
                            <div class="info-icon">
                                <span class="icon"><i class="{{ section.settings.info_icon_2 }}"></i></span>
                            </div>
                            {% endif %}
                            <div class="info-text">
                                {% if section.settings.info_label_2 != '' %}
                                <span class="label">{{ section.settings.info_label_2 }}</span>
                                {% endif %}
                                {% if section.settings.info_text_2 != '' %}
                                <span class="text">{{ section.settings.info_text_2 }}</span>
                                {% endif %}
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
